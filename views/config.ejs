<%- include('components/head')%>
  <%- include('components/nav')%>

    <div data-id="<%= companyId %>" id="container" class="wrapper">
      <div id="msgDiv">
        <!-- message will be here from customer-add.js -->
      </div>
      <div class="confirmDiv">
        <!-- confirmation box will insert from javascripts/ConfirmationBox.js -->
      </div>
      <div id="addEditForm">
        <!-- add form will be here from javascripts/CustomerForm.js -->
      </div>
      <div class="pageContainer">
        <div class="titleDiv">
          <h1 class="title">CONFIGURATION</h1>
        </div>
        <div class="funcHeader">
          <button id="addServiceBtn" class="funcBtn">
            Add service<i id="addServiceBtnIcon" class="fa-sharp fa-solid fa-plus addIcon"></i>
          </button>
          <button id="addTagBtn" class="funcBtn">
            Add Tag<i id="addTagBtnIcon" class="fa-sharp fa-solid fa-plus addIcon"></i>
          </button>
          <button id="addProductBtn" class="funcBtn">
            Add Product<i id="addProductBtnIcon" class="fa-sharp fa-solid fa-plus addIcon"></i>
          </button>
        </div>
        <div class="yourInfoBox box">
          <h2 class="containerTitle">Your Business</h2>
          <div class="businessInfoDiv">
            <!-- data is javascript/htmlTemplate/configHtml -->
          </div>
        </div>
        <div class="gridContainer">
          <div class="configDiv box">
            <h2 class="containerTitle">Services</h2>
            <ul class="serviceUl containerUl">
              <!-- data is javascript/htmlTemplate/configHtml -->
            </ul>
          </div>
          <div class="configDiv box">
            <h2 class="containerTitle">Tags</h2>
            <ul class="tagUl containerUl">
              <!-- data is javascript/htmlTemplate/configHtml -->
            </ul>
          </div>
          <div class="configDiv box">
            <h2 class="containerTitle">Products</h2>
            <ul class="productUl containerUl">
              <!-- data is javascript/htmlTemplate/configHtml -->
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%- include('components/footer') %>