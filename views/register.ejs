<%- include('partials/head')%>

<div id="regiContainer" class="loginRegiContainer">
  <div id="regiDiv" class="loginRegiDiv">
    <h1>REGISTER</h1>
    <div class="loginRegiLogoDiv">
      <img src="/images/logo.svg" alt="logo">
    </div>
    <div class="loginRegiForm">
      <div class="inputDiv">
        <label class="labels" for="firstName">first name</label><br/>
        <input class="inputs" type="text" id="firstName" name="firstName"><br>
      </div>
      <div class="inputDiv">
        <label class="labels" for="lastName">last name</label><br/>
        <input class="inputs" type="text" id="lastName" name="lastName"><br>
      </div>
      <div class="inputDiv">
        <label class="labels" for="email">email</label><br/>
        <input class="inputs" type="email" id="email" name="email"><br>
      </div>
      <label class="labels" for="permission">Select a permission</label>
      <select id="permission" name="permission" for="permission">
        <option value="owner">owner</option>
        <option value="admin">admin</option>
        <option value="editor">editor</option>
        <option value="viewer">viewer</option>
      </select>
      <div id="regiBtnDiv">
        <button id="registerBtn" class="loginRegiBtn">SEND REQUEST</button>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>