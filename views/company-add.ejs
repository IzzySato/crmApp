<%- include('partials/head')%>
<%- include('partials/nav')%>

<div class="wrapper">
  <div class="confirmDiv">
    <!-- confirmation box will insert from js -->
  </div>
  <div class="companyAddDiv">
    <h1 class="title">Add a new company</h1>
    <div class="form">
      <div class="inputDiv">
        <label class="labels" for="businessName">Business Name</label><br/>
        <input class="inputs" type="text" id="businessNameInput" name="businessName"><br>
      </div>
      <div class="btnsDiv">
        <div>
          <button id="addCompanyBtn" class="submit openConfirmBtns">Add Company</button>
        </div>
      </div>
    </div>
  </div>
  <div class="companyAddDiv">
    <h2 class="title">Add a new user to the company</h2>
    <div class="inputDiv">
      <label class="labels" for="company">Select a company</label><br/>
      <select id="companySelect">
        <!-- data will be here from company-add.js -->
      </select>
    </div>
    <div>
      <%- include('partials/add-user-form')%>
      <div>
        <button id="addUserAdmin" class="openConfirmBtns submit">ADD USER</button>
      </div>
    </div>
    <div class="backDiv">
      <a href="/company" class="backBtn">BACK</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>